{
  "name": "car-quiz",
  "version": "1.0.0",
  "description": "Interactive automotive quiz application in Traditional Chinese",
  "main": "dist/src/quiz.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy-data",
    "clean": "rm -rf dist",
    "compile": "npx tsc -p tsconfig.prod.json",
    "copy-data": "cp -r src/data dist/src/",
    "start": "node dist/src/quiz.js",
    "dev": "npm run build && npm start"
  },
  "dependencies": {
    "@types/node": "^24.3.0",
    "pdf-parse": "^1.1.1",
    "readline-sync": "^1.4.10",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/pdf-parse": "^1.1.1",
    "@types/readline-sync": "^1.4.8"
  }
}
